---
import H1 from "../components/H1.astro";

import LogoLight from "../components/LogoLight.astro";

const textLinks: { label: string; href: string }[] = [
  { label: "Home", href: "/" },
  { label: "Work", href: "/work/" },
  { label: "About", href: "/blog/" },
];
---

<header
  class="flex justify-between items-center px-24 py-12 max-sm:px-5 max-sm:py-10 max-w-7xl w-full mx-auto"
>
  <a href="/" class="flex items-center gap-x-4"
    ><LogoLight width="60" height="60" />
    <h2 class="text-3xl text-white font-medium">RAD Applications</h2>
    <div class="flex bg-zinc-50 rounded-xl p-2">
      {
        textLinks.map(({ label, href }) => {
          const activeStyle =
            Astro.url.pathname === href ||
            (href !== "/" && Astro.url.pathname.startsWith(href))
              ? "bg-zinc-700 text-white"
              : "bg-white text-zinc-700 ";

          return (
            <a
              aria-current={Astro.url.pathname === href}
              class={`p-2 rounded-lg ${activeStyle}`}
              href={href}
            >
              {label}
            </a>
          );
        })
      }
    </div>
  </a>
</header>
