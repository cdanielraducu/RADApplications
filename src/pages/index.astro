---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import H1 from "../components/H1.astro";
import Main from "../components/Main.astro";
import H2 from "../components/H2.astro";
import { Image } from "astro:assets";
import CrossIcon from "../components/icons/CrossIcon.astro";
import DeveloperIcon from "../components/icons/DeveloperIcon.astro";
import ReadIcon from "../components/icons/ReadIcon.astro";
---

<Layout title="Welcome to RAD Applications">
  <Main>
    <div class="flex flex-col items-start lg:flex-row lg:items-center">
      <div class="flex-col">
        <H1 text="Hello, this is RAD Applications." />
        <H2 text="This is run by Dani Raducu, a Frontend Developer, currently based in Bucharest, Romania." />
        <div class="flex flex-row space-x-2">
          <div class="bg-zinc-600 rounded-3xl w-max p-2.5 flex">
            <CrossIcon />
            <p class="text-md text-white font-medium ml-1">Christian</p>
          </div>
          <div class="bg-zinc-600 rounded-3xl w-max p-3 flex">
            <DeveloperIcon />
            <p class="text-md text-white font-medium ml-2">Developer</p>
          </div>
          <div class="bg-zinc-600 rounded-3xl w-max p-3 flex">
            <ReadIcon />
            <p class="text-md text-white font-medium ml-2">Reader</p>
          </div>
        </div>
      </div>
      <img
        src="/home_profile_photo.JPG"
        class="rounded-2xl aspect-thumbnail object-cover aspect-square w-[400px] pl-0 lg:pl-4"
      />
    </div>
  </Main>
</Layout>
